{
  "name": "markify-ts",
  "version": "0.0.4",
  "description": "Convert web pages and HTML snippets into Markdown content",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "markify": "tsx run.ts",
    "build": "tsup index.ts --minify --dts --format esm --out-dir dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "next dev",
    "build:next": "next build",
    "start": "next start"
  },
  "keywords": [
    "html",
    "markdown",
    "cheerio"
  ],
  "author": "Thiago Barbosa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobarbosa/markify-ts"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@swc/core": "^1.11.13",
    "@swc/types": "^0.1.20",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.341.0",
    "next": "^14.2.26",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.22",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.0", 
    "typescript": "^5"
  },
  "peerDependencies": {
    "cheerio": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}