{
  "name": "markify-ts",
  "version": "0.0.15",
  "description": "Convert web pages and HTML snippets into Markdown content",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "../README.md",
    "../LICENSE"
  ],
  "scripts": {
    "markify": "tsx run.ts",
    "build": "tsup index.ts --minify --dts --format esm --out-dir dist",
    "release:prepare": "cp ../README.md ./README.md",
    "release": "npm i && npm run build && npm run release:prepare && npm publish && npm run cleanup",
    "cleanup": "rm -f ./README.md",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "html",
    "markdown",
    "converter",
    "html-to-markdown",
    "html-to-markdown-converter"
  ],
  "author": "Thiago Barbosa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobarbosa/markify-ts"
  },
  "dependencies": {
    "@swc/core": "^1.11.13",
    "@swc/types": "^0.1.20",
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "tsup": "^8.0.2",
    "typescript": "^5"
  }
}
